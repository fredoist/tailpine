{
  "name": "tailpine",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run clean && npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve --port=3000",
    "dev:tailwindcss": "tailwindcss -i node_modules/tailwindcss/tailwind.css -o dist/tailwind.css --watch",
    "build": "npm run clean && npm-run-all build:*",
    "build:eleventy": "eleventy",
    "build:tailwindcss": "tailwindcss -i node_modules/tailwindcss/tailwind.css -o dist/tailwind.css --minify",
    "clean": "rimraf dist/",
    "format": "prettier --write .",
    "lint": "eslint --ext .js"
  },
  "devDependencies": {
    "@11ty/eleventy": "1.0.0",
    "alpinejs": "3.9.0",
    "eslint": "8.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "prettier-plugin-tailwindcss": "0.1.7",
    "rimraf": "3.0.2",
    "tailwindcss": "3.0.22"
  }
}
